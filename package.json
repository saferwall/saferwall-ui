	"private": true,
	"scripts": {
		"d": "sudo PATH=\"$PATH\" bash -c 'npm run dev'",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
