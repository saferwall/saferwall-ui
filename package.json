{
	"name": "saferwall",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"d": "sudo PATH=\"$PATH\" NODE_OPTIONS=\"--network-family-autoselection-attempt-timeout=2000\" bash -c 'npm run dev'",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"gen-api": "openapi-generator-cli generate -i ../webapis/docs/swagger.json -g typescript-axios -o src/lib/api",
		"prepublish": "PACKAGE_VERSION=$(jq -r '.version' package.json) NODE_VERSION=$(node -v | sed 's/v//'); echo $PACKAGE_VERSION; echo $NODE_VERSION; cat Dockerfile.base | sed 's/${NODE_VERSION}/'\"$NODE_VERSION\"/ | sed 's/${PACKAGE_VERSION}/'\"$PACKAGE_VERSION\"/ > Dockerfile",
		"publish": "gh workflow run release.yaml --ref master",
		"postinstall": "patch-package"
	},
	"type": "module",
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240718.0",
		"@csstools/postcss-light-dark-function": "^2.0.6",
		"@interactjs/types": "^1.10.27",
		"@openapitools/openapi-generator-cli": "^2.13.4",
		"@playwright/test": "^1.45.2",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-cloudflare": "^5.0.2",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/typography": "^0.5.13",
		"@types/nprogress": "^0.2.3",
		"@typescript-eslint/eslint-plugin": "^7.16.1",
		"@typescript-eslint/parser": "^7.16.1",
		"@vitejs/plugin-basic-ssl": "^1.1.0",
		"autoprefixer": "^10.4.19",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-love": "^56.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^17.9.0",
		"eslint-plugin-promise": "^6.4.0",
		"eslint-plugin-svelte": "^2.43.0",
		"hast": "^1.0.0",
